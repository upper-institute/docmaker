{
  "extends": "./tsconfig.paths.json",
  "compilerOptions": {
    "lib": ["es2021", "ES2018", "DOM"],
    "moduleResolution": "node",
    "module": "commonjs",
    "noEmit": false,
    "declaration": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "noUnusedLocals": true,
    "noUnusedParameters": false,
    "esModuleInterop": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es2021",
    "declarationMap": true,
    "declarationDir": "dist",
    "outDir": "dist",
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules/**/*", ".serverless/**/*", ".webpack/**/*", ".vscode/**/*"]
}
